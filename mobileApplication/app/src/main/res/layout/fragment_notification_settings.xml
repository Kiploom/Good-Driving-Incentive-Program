<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/settingsProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchEmailEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_pref_email" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchInAppEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_pref_inapp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/notifications_pref_types"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_type_points" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_type_order" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchApplications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_pref_applications" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_pref_tickets" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchRefunds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_pref_refunds" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAccountStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_type_account" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchSensitive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_pref_sensitive" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchQuietHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_pref_quiet_hours" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonQuietStart"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notifications_quiet_start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonQuietEnd"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/notifications_quiet_end" />
        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchLowPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/notifications_pref_lowpoints" />

        <TextView
            android:id="@+id/textLowPointsValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderLowPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="5000"
            android:stepSize="50" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSavePreferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/save" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTestLowPoints"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications_test_low_points" />

    </LinearLayout>

</ScrollView>

